
<div class="d-flex justify-content-between">
  <h4>Turma</h4>
  <%= link_to 'Nova Turma', new_turma_path, class: "btn btn-sm btn-primary text-white" %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Identificacao da turma</th>
      <th>Descricao</th>
      <th>Quantidade de estudante</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @turmas.each do |turma| %>
      <tr>
        <td><%= turma.identificacao_da_turma %></td>
        <td><%= turma.descricao %></td>
        <td><%= turma.quantidade_de_estudante %></td>
        <td><%= link_to 'Show', turma, class: "btn btn-sm btn-info text-white" %></td>
        <td><%= link_to 'Edit', edit_turma_path(turma), class: "btn btn-sm btn-warning text-white" %></td>
        <td><%= link_to 'Destroy', turma, class: "btn btn-sm btn-danger text-white", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>