<%= form_with(model: utilizador) do |f| %>
  <% if utilizador.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(utilizador.errors.count, "error") %> prohibited this utilizador from being saved:</h2>

      <ul>
        <% utilizador.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome_completo, class: "form-label" %>
    <%= f.text_field :nome_completo, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :nif, class: "form-label" %>
    <%= f.text_field :nif, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :email, class: "form-label" %>
    <%= f.text_field :email, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :turma_id, class: "form-label" %>
    <%= f.collection_select(:turma_id, Turma.all, :id, :numero_da_turma, include_blank: true, class: "form-select") %>
  </div>

  <div class="actions float-end">
    <% if @utilizador.id.present? %>
      <%= f.submit "Atualizar", class: "btn btn-md btn-primary" %>
    <% else %>
      <%= f.submit "Criar", class: "btn btn-md btn-primary" %>
    <% end %>
    <%= link_to 'Back', utilizadors_path, class: "btn btn-md btn-secondary text-white" %>
  </div>
<% end %>
