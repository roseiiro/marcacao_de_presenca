<!DOCTYPE html>
<html>
  <head>
    <title>MarcacaoDePresenca</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-gray-200">
    <% if user_signed_in? %>
      <!-- navbar -->
      <%= render 'shared/navbar' %>

      <!-- alert notifications -->
      <% flash.each do |key, value| %>
        <div class="<%= flash_message(key) %>">
          <p><%= value %></p>
        </div>
      <% end %>

      <div class="main">
        <div class="container-fluid p-0">
          <%= yield %>
        </div>
      </div>

    <% else %>
      <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container-fluid">
          <a href="<%= root_url %>" class="navbar-brand text-white-50">LogIn App</a>
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <%= link_to "Login", new_user_session_url, class: "nav-link text-light" %>
            </li>
            <li class="nav-item">
              <%= link_to "Registrar", new_user_registration_url, class: "nav-link text-light" %>
            </li>
          </ul>
        </div>
      </nav>
      <div class="main-login">
        <div class="card shadow">
          <div class="card-body">
              <!-- yield -->
            <%= yield %>
          </div>
        </div>
      </div>
    <% end %>
  </body>
</html>
